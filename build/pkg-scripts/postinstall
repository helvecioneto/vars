#!/bin/bash

# Define the log file
LOG_FILE="/tmp/vars_install_log.txt"

echo "Starting post-install script for VARS..." > "$LOG_FILE"

# The path where the app is installed
APP_PATH="/Applications/VARS.app"

if [ -d "$APP_PATH" ]; then
    echo "App found at $APP_PATH. Attempting to remove quarantine attribute..." >> "$LOG_FILE"
    
    # Remove the quarantine attribute
    xattr -dr com.apple.quarantine "$APP_PATH" || true
    xattr -cr "$APP_PATH" || true
    
    echo "Quarantine removal command finished." >> "$LOG_FILE"
else
    echo "App not found at $APP_PATH." >> "$LOG_FILE"
fi

echo "Post-install script completed." >> "$LOG_FILE"

exit 0
